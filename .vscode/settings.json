	"typescript.enablePromptUseWorkspaceTsdk": true,
	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	"editor.formatOnPaste": true,
	"javascript.format.semicolons": "insert",
	"typescript.format.semicolons": "insert",
