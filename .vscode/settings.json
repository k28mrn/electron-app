		"chara",
		"pmrem",
		"Equirectangular",
		"gltf",
		"RGBE",
		"metalness",
		"svgr",
		"Raycaster",
		"lerp",
		"gtag",
		"tweakpane",
		"fpsgraph",
		"onmidimessage",
		"webmidi",
	],
	"files.exclude": {
		"node_modules": true,
	},
	"search.exclude": {
		"main": true,
	}
}
